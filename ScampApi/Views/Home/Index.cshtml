@model  ScampTypes.ViewModels.ScampSettings

@{
	var serSettings = new Newtonsoft.Json.JsonSerializerSettings
	{
        ContractResolver = new Newtonsoft.Json.Serialization.CamelCasePropertyNamesContractResolver()
    };
